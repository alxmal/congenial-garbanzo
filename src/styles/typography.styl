/* Font */
body, html
    font-family $fb
    font-weight 400
    font-size $fs
    line-height $lh
    color $n900
    -webkit-font-smoothing subpixel-antialiased
    -moz-osx-font-smoothing grayscale

h1, h2, h3
    font-family $fh

h1,
.title-h1
    font-size 48px
    line-height 1.2
    margin-top 0
    margin-bottom 1rem
h2,
.title-h2
    font-size 36px
    line-height 1.3
h3,
.title-h3
    font-size 24px
    line-height 1.4
small
    font-size 12px
    line-height 1.4
