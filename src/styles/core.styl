html
    height 100%
    overflow-y scroll
    overflow-x hidden
body
    width 100%
    max-width 1600px
    height 100vh
    margin 0 auto
    background-color #96A8C8

main
    height 100%

.wrapper
    display grid
    grid-auto-flow column
    grid-template-columns repeat(12, 1fr)
    grid-template-rows 80px auto auto
    column-gap 2rem
    row-gap 1rem
    padding 0 2rem 3rem

.card
    border-radius .5rem
    background-color #FFF

.header
    grid-column 1 / span 12
    align-self center
    .title
        font-size 2rem
    .caption
        font-size 1.2rem
        font-style italic

.viewbox
    display flex
    flex-direction column
    grid-column 3 / span 8
    padding-bottom 2rem
    .comics
        display flex
        flex-direction column
        align-items center
        justify-content start
        width 100%
        height 90%
        padding 1rem 1rem 2rem
        &-header
            margin-bottom 1rem
            .title
                font-size 1.25rem
            .published
                text-align center
                color #828282
.controls
    display flex
    justify-content center
    align-items center
    position fixed
    bottom 2rem
    left calc(50% - 250px)
    width 500px
    padding .5rem
    box-shadow 0 .5rem 2rem -.5rem rgba(0,0,0,.4)

.transcript
    grid-column 3 / span 8
    padding 0 2rem

.btn
    background-color #6E7B91
    border none
    border-radius .3rem
    color white
    padding .2rem .8rem
    text-align center
    text-decoration none
    display inline-block
    font-size 16px
    &:hover
        opacity .8
        cursor pointer
    &:not(:last-child)
        margin-right 1rem

.centered
    text-align center
